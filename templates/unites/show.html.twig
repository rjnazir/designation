
{% extends 'base_with_menu.html.twig' %}

{% block title %}Tenue{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header bg-primary">
        <h3 class="card-title">
            <i class="nav-icon fa fa-eye"></i>
                Tenue
        </h3>
        <div class="card-tools">
            <a href="{{ path('app_unites_new') }}" class="btn btn-sm btn-light">
                <i class="fa fa-plus"></i>
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <tbody>
                <tr>
                    <th>Nom unité</th>
                    <td>{{ unite.nomUte }}</td>
                </tr>
                <tr>
                    <th>Localité</th>
                    <td>{{ unite.localiteUte }}</td>
                </tr>
                <tr>
                    <th>Abréviation unité</th>
                    <td>{{ unite.abreviationUte }}</td>
                </tr>
                <tr>
                    <th>Unité supérieur</th>
                    <td>{{ unite.abreviationUte }}</td>
                </tr>                
                <tr>
                    <th>Contact</th>
                    <td>{{ unite.contactUte }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div class="row text-center">
            <div class="col col-4"><a class="btn btn-sm btn-default" href="{{ path('app_unites_index') }}">Retour à la liste</a></div>
            <div class="col col-4">{{ include('unites/_delete_form.html.twig') }}</div>
            <div class="col col-4"><a class="btn btn-sm btn-warning" href="{{ path('app_unites_edit', {'id': unite.id}) }}"><i class="fas fa-edit"></i>  Modifier</a></div>
        </div>
    </div>
</div>
{% endblock %}


{% extends 'base_with_menu.html.twig' %}

{% block title %}Créer unité{% endblock %}

{% block body %}

<div class="card">
    <div class="card-header bg-primary">
            <h3 class="card-title">
                <i class="nav-icon fa fa-plus"></i>
                Créer unité
            </h3>
    </div>
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
            {{ message }}
    </div>
    {% endfor %}
    <div class="card-body">
            {{ include('unites/_form.html.twig', {'button_label': 'Enregistrer'}) }}
    </div>
    <div class="card-footer">
        <div class="row text-center">
                <div class="col col-4"><a class="btn btn-sm btn-default" href="{{ path('app_unites_index') }}">Retour à la liste</a></div>
                <div class="col col-4"></div>
                <div class="col col-4"></div>
        </div>
    </div>
</div>
{% endblock %}

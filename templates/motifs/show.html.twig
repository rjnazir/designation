{% extends 'base_with_menu.html.twig' %}

{% block title %}Motifs{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header bg-primary">
        <h3 class="card-title">
            <i class="nav-icon fa fa-eye"></i>
            Motif
        </h3>
        <div class="card-tools">
            <a href="{{ path('app_motifs_new') }}" class="btn btn-sm btn-light">
                <i class="fa fa-plus"></i>
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <tbody>
                {# <tr>
                    <th>Id</th>
                    <td>{{ motif.id }}</td>
                </tr> #}
                <tr>
                    <th>Libellé motif</th>
                    <td>{{ motif.libelleMtf }}</td>
                </tr>
                <tr>
                    <th>Abréviation motif</th>
                    <td>{{ motif.abreviationMtf }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div class="row text-center">
            <div class="col col-4"><a class="btn btn-sm btn-default" href="{{ path('app_motifs_index') }}">Retour à la liste</a></div>
            <div class="col col-4">{{ include('motifs/_delete_form.html.twig') }}</div>
            <div class="col col-4"><a class="btn btn-sm btn-warning" href="{{ path('app_motifs_edit', {'id': motif.id}) }}"><i class="fas fa-edit"></i>  Modifier</a></div>
        </div>
    </div>
</div>
{% endblock %}

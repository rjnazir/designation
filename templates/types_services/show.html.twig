{% extends 'base_with_menu.html.twig' %}

{% block title %}Type de service{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header bg-primary">
        <h3 class="card-title">
            <i class="nav-icon fa fa-eye"></i>
            Type de service
        </h3>
        <div class="card-tools">
            <a href="{{ path('app_types_services_new') }}" class="btn btn-sm btn-light">
                <i class="fa fa-plus"></i>
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <tbody>
                <tr>
                    <th>Type de service</th>
                    <td>{{ types_service.nomTypeSce }}</td>
                </tr>
                <tr>
                    <th>Abréviation type service</th>
                    <td>{{ types_service.abreviationTypeSce }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div class="row text-center">
            <div class="col col-4"><a class="btn btn-sm btn-default" href="{{ path('app_types_services_index') }}">Retour à la liste</a></div>
            <div class="col col-4">{{ include('types_services/_delete_form.html.twig') }}</div>
            <div class="col col-4"><a class="btn btn-sm btn-warning" href="{{ path('app_types_services_edit', {'id': types_service.id}) }}"><i class="fas fa-edit"></i>  Modifier</a></div>
        </div>
    </div>
</div>
{% endblock %}

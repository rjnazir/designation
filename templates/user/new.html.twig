{% extends 'base_with_menu.html.twig' %}

{% block title %}Créer utilisateur{% endblock %}

{% block body %}

    <div class="col-lg-12">
        <div class="card">
                {{ form_start(form) }}
                <div class="card-header bg-primary">
                        <h3 class="card-title">Créer utilisateur</h3>
                </div>
                {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
                {% endfor %}
                <div class="card-body">
                        {# <div class="basic-form">{{ include('user/_form.html.twig') }}</div> #}
                        <div class="col col-12">{{ form_row(form.username) }}</div>
                        <div class="col col-12">{{ form_row(form.roles) }}</div>
                        <div class="col col-12">{{ form_row(form.password) }}</div>
                        <div class="col col-12">{{ form_row(form.isActive) }}</div>
                        {# <div class="col col-12"></div> #}
                </div>
                <div class="card-footer">
                        <div class="row text-center">
                                <div class="col col-4"><a class="btn btn-sm btn-default" href="{{ path('app_user_index') }}">Retour à la liste</a></div>
                                <div class="col col-4"></div>
                                <div class="col col-4">{{ include('user/_form.html.twig') }}</div>
                        </div>
                </div>
                {{ form_end(form) }}
        </div>
    </div>
    
{% endblock %}